<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <h1>Full Menu</h1>

    <% const mains= menu.filter((items)=>{return items.category === "mains"}); %>
    <%const desserts= menu.filter((items)=>{return items.category === 'desserts'});%>
    <%const sides= menu.filter((items)=>{return items.category === 'sides'});%>

    <h2>mains</h2>
    <% mains.forEach((item)=>{ %>
    <ol>
      <li><%=item.name%> <% if(item.rating === 5) {%><small>⭐</small> <%}%></li>

      <ul>
        <li>$<%=item.price%></li>
        <li><%=item.rating %>☆</li>
        <li><%=item.details %></li>
      </ul>
    </ol>
    <%})%>

    <h2>desserts</h2>
    <% desserts.forEach((item)=>{ %>
    <ol>
      <li><%=item.name%> <% if(item.rating === 5) {%><small>⭐</small> <%}%></li>

      <ul>
        <li>$<%=item.price%></li>
        <li><%=item.rating %>☆</li>
        <li><%=item.details %></li>
      </ul>
    </ol>
    <%})%>

    <h2>sides</h2>
    <% sides.forEach((item)=>{ %>
    <ol>
      <li><%=item.name%> <% if(item.rating === 5) {%><small>⭐</small> <%}%></li>

      <ul>
        <li>$<%=item.price%></li>
        <li><%=item.rating %>☆</li>
        <li><%=item.details %></li>
      </ul>
    </ol>
    <%})%>
  </body>
</html>
